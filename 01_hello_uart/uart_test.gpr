with "config/uart_test_config.gpr";
project Uart_Test is
   for Runtime ("Ada") use "light-tasking-stm32f4";
   for Target use "arm-eabi";

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Uart_Test_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("uart_test.adb");

   package Compiler is
      for Default_Switches ("Ada") use Uart_Test_Config.Ada_Compiler_Switches;
      for Switches ("s-textio.adb") use
        Uart_Test_Config.Ada_Compiler_Switches & ("-gnatg");
      for Switches ("a-textio.adb") use
        Uart_Test_Config.Ada_Compiler_Switches & ("-gnatg");
   end Compiler;

   package Linker is
      for Default_Switches ("Ada") use ("-Wl,--gc-sections");
   end Linker;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Uart_Test;
